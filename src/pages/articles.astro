---
import Layout from "../layouts/Layout.astro"
import Card from '../components/Card.astro';
---

<Layout title="Articles">
    <main>
        <h1><span class="text-gradient">Articles</span></h1>
        <ul role="list" class="link-card-grid">
			<Card
				href="https://docs.astro.build/"
				title="Вбивство на курорті"
				body="Learn how Astro works and explore the official API docs."
                backgroundImage="https://localhistory.org.ua/media/images/vbivstvo_seo.2e16d0ba.fill-600x320.jpg"
			/>
			<Card
				href="https://astro.build/integrations/"
				title="Залізна дивізія УНР проти червоних"
				body="Supercharge your project with new frameworks and libraries."
                backgroundImage="https://localhistory.org.ua/media/images/vbivstvo_seo.2e16d0ba.fill-600x320.jpg"
			/>
			<Card
				href="https://astro.build/themes/"
				title="Рибалки — потомки запорожців"
				body="Explore a galaxy of community-built starter themes."
                backgroundImage="https://localhistory.org.ua/media/images/vbivstvo_seo.2e16d0ba.fill-600x320.jpg"
			/>
			<Card
				href="https://astro.build/chat/"
				title="10 питань про Люблінську унію та її вплив на Україну"
				body="Come say hi to our amazing Discord community. ❤️"
                backgroundImage="https://localhistory.org.ua/media/images/vbivstvo_seo.2e16d0ba.fill-600x320.jpg"
			/>
		</ul>
    </main>
</Layout>

<style>
.link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 1rem;
    padding: 0;
}
</style>
